<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>MyFirstServlet</display-name>
    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>ru.innopolis.stc9.susev.servlets.AdminDashboardServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin/dashboard</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>ru.innopolis.stc9.susev.servlets.DefaultServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>ru.innopolis.stc9.susev.servlets.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>ru.innopolis.stc9.susev.servlets.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>dashboard</servlet-name>
        <servlet-class>ru.innopolis.stc9.susev.servlets.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dashboard</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/css/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index.jsp</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>auth</filter-name>
        <filter-class>ru.innopolis.stc9.susev.servlets.filters.AuthFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>auth</filter-name>
        <url-pattern>/hello/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>admin</filter-name>
        <filter-class>ru.innopolis.stc9.susev.servlets.filters.AdminFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>admin</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
</web-app>